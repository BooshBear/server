extends ../header.pug

block title
  title #{title} : #{division.name}

block content
  div.columns
    div.column
      h3.title.is-3.has-icon
        span.icon.is-medium
          i.fas.fa-list
        span Masters: #{division.name}

  div.columns
    div.column
      h4.title
        span Seasons
      table.table.is-striped.is-middle-aligned.is-fullwidth
        thead
          tr
            th
            th Teams
            th Series
            th Results
        tbody
          each season in seasons
            tr
              td= `Season ${season.number}`
              td
                a(href='/masters/seasons/' + season.id + '/divisions/' + division.id + '/teams') teams
              td
                a(href='/masters/seasons/' + season.id + '/divisions/' + division.id + '/series') series
              td
                a(href='/masters/seasons/' + season.id + '/divisions/' + division.id + '/results') results
            div.field.is-grouped
              p.control

      if user && user.isAdmin
        div.field.is-grouped
          div.control
            a.button(href='/masters/divisions/' + division.id + '/edit') Edit division
