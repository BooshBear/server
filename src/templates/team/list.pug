extends ../components/base.pug

block title
  title #{title} : #{season ? season.name : ''} Team List

block content
  div.columns
    div.column
      h3.title.is-3
        span.icon.is-medium
          i.fa.fa-list
        span &nbsp;#{season ? season.name : ''} Teams
      table.table.is-striped.is-middle-aligned
        thead
          tr
            th Name (Captain)
            th Logo
            th Seed
            if user && user.isAdmin
              th Edit
        tbody
          each team in teams
            tr
              td
                a(href='/seasons/' + season.vanity + '/teams/' + team.vanity)= team.name
                span= team.captain_name ? ' (' + team.captain_name + ')' : ''
              td
                figure.image.is-team-logo.hide-overflow
                  img(src=team.logo)
              td= team.seed
              if user && user.isAdmin
                td
                  a(href='/seasons/' + season.vanity + '/teams/' + team.vanity + '/edit') edit
      if user && user.isAdmin
        a(href='/seasons/' + season.vanity + '/teams/create')
          button.button.is-primary Add team
