{
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "global-require": "error",
      "indent": ["error", 2],
      "max-len": ["error", 120],
      "no-console": "off",
      "no-process-env": "error",
      "no-var": "error",
      "prefer-const": "error",
      "quotes": ["error", "single"],
      "semi": ["error", "never"]
    }
}
