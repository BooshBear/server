extends ../components/base.pug

block title
  title #{title} : #{season ? season.name : ''} Player List

block content
  div.columns
    div.column
      h3.title.is-3
        span.icon.is-medium
          i.fa.fa-list
        span &nbsp;#{season ? season.name : ''} Players
      table.table.is-striped.is-middle-aligned
        thead
          tr
            th Name
            th Avatar
            th Solo MMR
            th Party MMR
            th Adjusted MMR
            th Dotabuff / Opendota
            th Will Captain?
            th Captain Approved
            th Vouched?
            if user && user.isAdmin
              th Edit
        tbody
          each player in players
            tr
              td= player.name
              td
                figure.image.is-32x32.hide-overflow
                  img(src=player.avatar)
              td= player.solo_mmr
              td= player.party_mmr
              td= player.adjusted_mmr
              td
                a(href='https://www.dotabuff.com/players/' + player.steam_id) Dotabuff
                span
                  |
                  |/
                  |
                a(href='https://www.opendota.com/players/' + player.steam_id) OpenDota
              td
                if player.will_captain
                  span Yes
                else
                  span No
              td
                if player.captain_approved
                  span Yes
                else
                  span No
              td
                if player.is_vouched
                  span Yes
                else
                  span No
              if user && user.isAdmin
                td
                  a(href='/seasons/' + season.vanity + '/players/' + player.vanity + '/edit') edit
      if user && user.isAdmin
        a(href='/seasons/' + season.vanity + '/players/create')
          button.button.is-primary Add player
