doctype html
html(lang='en')
  head
    title SEAL: Sunday Evening Amateur League
    link(rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.2/css/bulma.css')
    link(rel='stylesheet' type='text/css' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='icon' type='image/png' href='https://raw.githubusercontent.com/seal-dota/seal-dota.github.io/master/seal.png')
  body.layout-default
    section.hero.has-text-centered
      div.hero-head.hero.is-info
        div.container
          nav.nav
            div.nav-left
              a.nav-item(href='/')
                span.icon
                  i.fa.fa-home
              if user && user.isAdmin
                a.nav-item(href='/seasons') Seasons
            div.nav-right
              if user
                a.nav-item(href='/')= user.displayName
                a.nav-item(href='/')
                  img(src=user.avatar)
                a.nav-item(href='/logout') Log out
              else
                a.nav-item(href='/auth/steam') Log in
      div.hero-body
        div.container
          div.columns
            div.column
              img(src='https://raw.githubusercontent.com/seal-dota/seal-dota.github.io/master/seal.png')
    section.section
      div.container
        div.columns
          div.column
            div.level
              div.level-item
                h5.title.is-5
                  span.icon
                    i.fa.fa-info-circle
                  |
                  | General
                  |
                  strong Info
            div.level
              div.level-item
                ul
                  li Sundays 7 PM Pacific Time
                  li 8 week regular season
                  li Swiss pairings
                  li
                    a(href='https://github.com/seal-dota/rules') League Rules
          div.column
            div.level
              div.level-item
                h5.title.is-5
                  span.icon
                    i.fa.fa-users
                  |
                  | Player
                  |
                  strong Culture
            div.level
              div.level-item
                ul
                  li Make new friends
                  li Get flamed by new friends
                  li Be a part of the memes
                  li bE a PaRt Of tHE mEMeS
          div.column
            div.level
              div.level-item
                h5.title.is-5
                  span.icon
                    i.fa.fa-trophy
                  |
                  | SEAL
                  |
                  strong DOTA
            div.level
              div.level-item
                ul
                  li Zero entry fee
                  li Zero prizes
                  li Zero skill
                  li Zero reasons to join!
    section.section
      div.container
        h3.title.is-3
          span.icon.is-medium
