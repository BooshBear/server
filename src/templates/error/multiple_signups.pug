extends ../components/base.pug

block title
  title #{title} : Multiple Signups

block content
  div.columns
    div.column
      h3.title.is-3.has-icon
        span.icon.is-medium
          i.fa.fa-exclamation-triangle
        span Multiple Signups
  div.columns
    div.column
      if error
        span= error
      else
        div You may not sign up for more than one division in a season. If you wish to change divisions, ask an admin to move your signup.
