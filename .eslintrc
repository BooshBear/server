{
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "semi": ["error", "never"],
      "quotes": ["error", "single"],
      "no-process-env": "error",
      "no-console": "off",
      "global-require": "error",
      "max-len": ["error", 120]
    }
}
