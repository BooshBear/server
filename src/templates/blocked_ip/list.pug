extends ../components/base.pug

block title
  title #{title} : Blocked IP List

block content
  div.columns
    div.column
      h3.title.is-3.has-icon
        span.icon.is-medium
          i.fas.fa-list
        span Blocked IPs
      table.table.is-striped.is-middle-aligned.is-fullwidth
        thead
          tr
            th id
            th Address
            if user && user.isAdmin
              th Remove
        tbody
          each blocked_ip in blocked_ips
            tr
              td= blocked_ip.id
              td= blocked_ip.address
              if user && user.isAdmin
                td
                  a(href='/blocked_ip/' + blocked_ip.id + '/remove') remove