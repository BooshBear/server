extends ../components/base.pug

block title
  title #{title} : Season List

block content
  div.columns
    div.column
      h3.title.is-3
        span.icon.is-medium
          i.fa.fa-list
        span &nbsp;Seasons
      table.table.is-striped.is-middle-aligned.is-fullwidth
        thead
          tr
            th Number
            th Name
            th Players
            th Teams
            th Series
            th Standings
            th Matchups
            th Register
            if user && user.isAdmin
              th Edit
        tbody
          each season in seasons
            tr
              td= season.number
              td= season.name
              td
                a(href='/seasons/' + season.vanity + '/players') players
              td
                a(href='/seasons/' + season.vanity + '/teams') teams
              td
                a(href='/seasons/' + season.vanity + '/series') series
              td
                a(href='/seasons/' + season.vanity + '/standings') standings
              td
                a(href='/seasons/' + season.vanity + '/matchups') matchups
              td
                a(href='/seasons/' + season.id + '/register') register
              if user && user.isAdmin
                td
                  a(href='/seasons/' + season.vanity + '/edit') edit
      if user && user.isAdmin
        a(href='/seasons/create')
          button.button.is-primary Add season
